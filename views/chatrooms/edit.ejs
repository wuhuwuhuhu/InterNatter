<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Chatroom</h1>
    <div class="col-6 offset-3">
        <form action="/chatrooms/<%=chatroom._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="chatroom[title]"
                    value="<%=chatroom.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Add an image</label>
                <input class="form-control" type="text" id="image" name="chatroom[image]"
                    value="<%=chatroom.image %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            <!-- <input type="file" name="image" id=""> -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="chatroom[description]"
                    required><%= chatroom.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image">
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose an image</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Chatroom</button>
            </div>
        </form>
        <a href="/chatrooms/<%= chatroom._id%>">Back To Chatrooms</a>

    </div>
</div>